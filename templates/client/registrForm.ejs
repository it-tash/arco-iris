<div class="modal fade" id="registrModal" tabindex="-1" role="dialog" aria-labelledby="registrModalLabel" aria-hidden="true">

  <div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-body">

            <form action="/registr" method="POST">
                <div class="form-group">
                    <label for="registrInputLog"><b>Заполните пожалуйста форму </b></label>
                    <input type="text" class="form-control" id="registrInputLog" placeholder="Логин" name="name">
                </div>

                <div class="form-group">
                    <label for="telNo">Ваш телефонный номер</label>
                    <input class="form-control" id="telNo" name="telNo" type="tel" required pattern="[0-9]{3}[0-9]{3}[0-9]{4}" placeholder="пример формата 0977086910">
                    <span class="validity"></span>
                </div>

                <div class="form-group">
                        <input type="text" class="form-control" id="registrInputTown" placeholder="ваш город" name="town">
                </div>

                <div class="form-group">
                    <!--<label for="select">Выберите свой вариант</label>-->
                    <select required class="form-control" id="select" name="select">
                        <option value="" disabled selected hidden>Выберите свой вариант торговли...</option>
                        <option>Планирую начать бизнес</option>
                        <option>Продаю в соцсетях</option>
                        <option>Магазин</option>
                        <option>Сеть магазинов</option>
                        <option>Дропшифтинг</option>
                        <option>Другое</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="registrInputPassword1">Придумайте пароль</label>
                    <input type="text" class="form-control" id="registrInputPassword" placeholder="Пароль" name="pass">
                </div>

                <!-- <div class="form-group">
                    <input type="password" class="form-control" id="registrInputPassword2" placeholder="повторите пароль" name="pass2">
                </div> -->

                <div class="form-group">
                    <label for="inputEmail">Ваш Email</label>
                    <input type="email" class="form-control" id="inputEmail" aria-describedby="emailHelp" placeholder="Ваш email" name="email">
                </div>

                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="checkbox" value="vibergroup" checked name="viber">
                        хочу присоединиться к группе Viber
                    </label>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Регистрация</button>
                </div>
            </form>
        </div>
    </div>
  </div>
</div>
